<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentIllik"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IllikFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:id="@+id/bal"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="#00796B"
            android:backgroundTint="#00796B"
            android:gravity="center|center_horizontal"
            android:text="bal"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qiymet"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="#00796B"
            android:gravity="center|center_horizontal"
            android:text="qiymət"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/geriIllik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00796B"
        android:fontFamily="serif"
        android:text="Ana səhifəyə dön"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:iconTint="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:background="#00796B"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Zəhmət olmasa müvafiq xanaları doldurun!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/firstTerm"
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="I yarımil"
        android:inputType="number"
        android:scrollbarSize="10dp"
        android:textColorHint="#00796B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/secondTerm"
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="II yarımil"
        android:inputType="number"
        android:scrollbarSize="10dp"
        android:textColorHint="#00796B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstTerm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="334dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="Nəticə burada əks olunacaqdır."
        android:textAlignment="center"
        android:textColorHint="#00796B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondTerm">

        <Button
            android:id="@+id/hesabla"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#00796B"
            android:fontFamily="serif"
            android:onClick="hesabla"
            android:text="Hesabla"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/sifirla"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="#00796B"
            android:fontFamily="serif"
            android:onClick="sifirla"
            android:text="sıfırla"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>